    <servlet>
        <servlet-name>CrearSession</servlet-name>
        <servlet-class>controladoresServlet.CrearSession</servlet-class>
    </servlet>
     <servlet-mapping>
        <servlet-name>CrearSession</servlet-name>
        <url-pattern>/CrearSession</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
